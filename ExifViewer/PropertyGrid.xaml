<UserControl x:Class="QLike.Foto.ExifViewer.PropertyGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Name="gridMain" Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="5" FontWeight="Bold" Name="txtHeader"></TextBlock>
        <Grid Name="gridKeyValues" Grid.Row="1" VerticalAlignment="Top">
            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="LightGray"></Setter>
                </Style>
            </Grid.Resources>
        </Grid>
    </Grid>
</UserControl>
